pipeline {
    agent any
    
    environment {
        JDK_VERSION = 'jdk8' 
    }
    
    tools {
        jdk "${JDK_VERSION}"
        maven "maven"
    }
    
    stages {
        stage('Compile Project') {
            steps {
                sh 'mvn clean compile' 
            }
        }
        
        stage('Execute tests using Maven') {
            steps {
                sh 'mvn test' 
            }
        }
        
        stage('Build the project using Maven') {
            steps {
                sh 'mvn clean install' 
            }
        }
        
        stage('Build docker image') {
            steps {
                script {
                    sh "docker build -t giku87/petclinic:${BUILD_NUMBER} ."
                }
            }
        }
        
        stage('Publish docker image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker_HUB_key', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                    script {
                        sh "docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}"
                        sh "docker push giku87/petclinic:${BUILD_NUMBER}"
                    }
                }
            }
        }
    }
}
