pipeline {
    agent any
    
    environment {
        JDK_VERSION = 'jdk8' 
    }
    
    tools {
        jdk "${JDK_VERSION}"
        maven "maven"
    }
    
    stages {
        stage('Compile Project') {
            steps {
                sh 'mvn clean compile' 
            }
        }
        
        stage('Execute tests using Maven') {
            steps {
                sh 'mvn test' 
            }
        }
        
        stage('Build the project using Maven') {
            steps {
                sh 'mvn clean install' 
            }
        }
        
        stage('Build docker image') {
            steps {
                script {
                    sh "docker build -t giku87/petclinic:${BUILD_NUMBER} ."
                }
            }
        }
        
        stage('Publish docker image to Docker Hub') {
            steps {
                withCredentials([usernameId: '', passwordId: 'docker-hub-pat-id', passwordVariable: '']) {
                    script {
                        sh "docker push giku87/petclinic:${BUILD_NUMBER}"
                    }
                }
            }
        }
    }
}
