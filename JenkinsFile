pipeline {
    agent any
    
    environment {
        JDK_VERSION = 'jdk8'
    }
    
    tools {
        jdk "${JDK_VERSION}" 
        maven "maven"
    }
    
    stages {
        stage('Compile Project') {
            steps {
                sh 'mvn clean compile' 
            }
        }
        
        stage(' Execute tests using Maven ') {
            steps {
                sh 'mvn test' 
            }
        }
        
        stage('Build the project using Maven') {
            steps {
                sh 'mvn clean install' 
            }
        }
        stage('Build docker image using ') {
            steps {
                sh "docker build -t giku87/petclinic:${BUILD_NUMBER} ." 
            }
        }
        stage('Publish docker image to docker hub registry using ') {
            steps {
                withCredentials([usernameId: '', passwordId: 'docker_HUB_key', passwordVariable: 'docker_HUB_key']) {
                sh "docker push giku87/petclinic:${BUILD_NUMBER}"
                }
      }
    }
  }
}
      }  

docker_HUB_key

            }
        }
            
    }
}
