pipeline {
    agent any
    
    environment {
        JDK_VERSION = 'jdk8' 
        DOCKER_HUB_PAT_CREDENTIAL_ID = 'docker_HUB_key'
    }
    
    tools {
        jdk "${JDK_VERSION}"
        maven "maven"
    }
    
    stages {
        stage('Compile Project') {
            steps {
                sh 'mvn clean compile' 
            }
        }
        
        stage('Execute tests using Maven') {
            steps {
                sh 'mvn test' 
            }
        }
        
        stage('Build the project using Maven') {
            steps {
                sh 'mvn clean install' 
            }
        }
        
        stage('Build docker image') {
            steps {
                script {
                    sh "docker build -t giku87/petclinic:${BUILD_NUMBER} ."
                }
            }
        }



     stage('Publish docker image to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: "${docker_hub_key}", variable: 'DOCKER_HUB_TOKEN')]) {
                    script {
                        // Login to Docker Hub using the access token and push the Docker image
                        sh "docker login -u giku87 -p ${DOCKER_HUB_TOKEN}"
                        sh "docker push giku87/petclinic:${BUILD_NUMBER}"
                    }
                }
            }
        }




    }
}
